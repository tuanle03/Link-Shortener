= form_with(model: link) do |form|
  - if link.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(link.errors.count, "error")
        prohibited this link from being saved:
      %ul
        - link.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :url, style: "display: block"
    = form.text_field :url
  %div
    = form.submit
